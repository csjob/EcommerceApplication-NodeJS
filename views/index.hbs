

        <section>
            <div class="row pt-5">
              
                    {{#each products}}

                    <div class="card" style="width: 15rem;">
                        <img class="card-img-top" src="{{this.image}}" alt="Card image cap">
                        <div class="card-body">
                            <h5 class="card-title">{{this.name}}</h5>
                            <p class="card-text">{{this.content}}</p>
                            <a href="#" class="btn btn-primary">Add to cart</a>
                        </div>
                    </div>

                    {{/each}}
               
            </div>
        </section>
  